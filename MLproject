name: emotion-classification

entry_points:
    main:
        parameters:
            dataroot: {type: str, default: data/test}
            name: {type: str, default: model}
        command: 'python trainer.py --dataroot {dataroot} --name {name}'
    predict:
        parameters:
            dataroot: {type: str, default: data/test}
            name: {type: str, default: model}
        command: 'python trainer.py --predict --dataroot {dataroot} --name {name}'
        
